<%= ERB.new(File.read(CURRENT_PATH + "/templates/_license.erb"), trim_mode: '-').result(binding)%>

module Elastic
  module WorkplaceSearch
    class Client
      module <%= @module_name %>
        <%= @doc -%>
        def <%= @method_name %>(parameters = {})
          <% required_params.map do |required|
              name = required['name'] -%>
            raise ArgumentError, "Required parameter '<%= name %>' missing" unless parameters[:<%= name %>]
          <% end -%>

          request(
            :<%= @http_method %>,
            "<%= @path %>",
            parameters
          )
        end
      end
    end
  end
end
