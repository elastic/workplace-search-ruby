<%= ERB.new(File.read(CURRENT_PATH + "/templates/_license.erb"), trim_mode: '-').result(binding)%>

module Elastic
  module WorkplaceSearch
    class Client
      module <%= @module_name %>
        <%= @doc -%>
        def <%= @method_name %>(arguments = {})
          <% @required_params.map do |required| -%>
            raise ArgumentError, "Required argument '<%= required %>' missing" unless arguments[:<%= required %>]
          <% end -%>

          request(<%= @http_method %>, '<%= @path %>', <%= @params %>)
        end
      end
    end
  end
end
